{
  "plugins": {
    "@j-ulrich/release-it-regex-bumper": {
      "in": "VERSION",
      "out": {
        "files": ["VERSION", "src/**/*.omn", "src/**/*.xml", "src/**/*.owl"],
        "pattern": "v\\d+\\.\\d+\\.\\d+",
        "replace": "{{version}}"
      }
    }
  },
  "github": {
    "release": true
  }
}
