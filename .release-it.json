{
  "plugins": {
    "@j-ulrich/release-it-regex-bumper": {
      "in": "VERSION",
      "out": 
      {
        "files": ["VERSION", "src/**/*.omn", "src/**/*.xml", "src/**/*.owl"],
        "search": {
          "pattern": "v\\d+\\.\\d+\\.\\d+",
          "flag": "g"
        },
        "replace": "v{{version}}"
      }
    }
  },
  "github": {
    "release": true
  }
}
